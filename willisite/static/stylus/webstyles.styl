@import "normalize.styl"

azul_aguamarina = #005f6b
azul_medio = #008c9e
azul_clarito = #00dffc
gris_oscuro = #343838

@font-face {
	font-family 'willisite'
	src url('../fonts/willisite.eot?jzjw9t')
	src url('../fonts/willisite.eot?#iefixjzjw9t') format('embedded-opentype'),
		url('../fonts/willisite.woff?jzjw9t') format('woff'),
		url('../fonts/willisite.ttf?jzjw9t') format('truetype'),
		url('../fonts/willisite.svg?jzjw9t#willisite') format('svg')
	font-weight normal
	font-style normal
}

[class^="icon-"], [class*=" icon-"]
	font-family 'willisite'
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1

	/* Better Font Rendering =========== */
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale


.icon-image:before 
	content: "\e601"

.icon-camera:before 
	content: "\e602"

.icon-play:before 
	content: "\e603"

.icon-menus:before 
	content: "\e600"
	font-size 2em

.icon-share:before 
	content: "\e604"

.icon-facebook:before 
	content: "\e605"
	color  azul_medio

.icon-twitter:before 
	content: "\e606"
	color  azul_medio

.icon-tumblr:before 
	content: "\e607"

.icon-linkedin:before 
	content: "\e608"
	color  azul_medio

.icon-html5:before 
	content: "\e609"

.icon-html52:before 
	content: "\e60a"

.icon-css3:before 
	content: "\e60b"

.icon-arrow-down:before 
	content: "\e60c"
	font-size 2em
	color azul_clarito



body
	background azul_aguamarina
	font-size 16px	
figure
	margin 0

header
	color white
	overflow hidden
	padding 0.5em
	position relative

header p
	padding 0

header h1
	font-size 1.6em
	font-weight normal
	margin-right 1.5em
	text-align center

header .icon-menus
	float left
	transition 1s all ease

header .icon-menus
	&:hover
		text-shadow 0px 0px 30px white

.container figure
	margin 0
	padding 0

.container section figure
	&:first-child
		line-height 0

.container figure img
	width 100%

.container .seudomenu #list-menu
	left 0
	list-style none
	margin 0
	padding 0
	position relative
	top -2px	

.container .seudomenu #list-menu li
	background gris_oscuro
	margin 0.1em
	padding 0.5em 

.container .seudomenu #list-menu li a
	float left
	margin-top: -0.5em;
	text-decoration none	

.container .seudomenu #list-menu li p
	margin 0
	text-align center
	color azul_clarito

.header figure img
	margin 1em 0.5em 0 0
	position absolute
	right 0
	top 0

.footer
	position relative

.footer p
	position: absolute;
	top: 0;

.footer a
	color azul_clarito
	text-decoration none
	margin 1em

.footer .share-icons
	list-style none
	margin-right: 1.5em;
	position absolute
	top 0
	right 0

.footer .share-icons li
	display inline-block
	padding 0em 0.5em
	margin 0

.footer .share-icons li p
	margin 0 0.2em
	





